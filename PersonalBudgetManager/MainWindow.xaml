<Window x:Class="PersonalBudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalBudgetManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid ItemsSource="{Binding Transactions}" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Dodaj transakcję" Width="150" Height="30" Grid.Row="1" HorizontalAlignment="Right" Click="AddTransaction_Click"/>
        </Grid>

    </Grid>
</Window>
